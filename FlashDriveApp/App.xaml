             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FlashDriveApp">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="Styles/ProgressBarStyles.xaml" />
                <ResourceDictionary
                    Source="Styles/ListViewStyles.xaml" />
                <ResourceDictionary
                    Source="Styles/TextStyles.xaml" />
                <ResourceDictionary
                    Source="Styles/Buttons.xaml" />
                <ResourceDictionary
                    Source="Brushes.xaml" /> 
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
